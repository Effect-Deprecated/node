{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "build",
    "target": "ES2017",
    "module": "CommonJS",
    "incremental": true,
    "tsBuildInfoFile": "tsbuildinfo/build.tsbuildinfo",
    "removeComments": false,
    "plugins": [
      {
        "transform": "../tracing-plugin/src/index.ts",
        "moduleMap": {
          "^core/(.*)": "(@effect-ts/node): _src/$1"
        }
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["test", "node_modules"]
}
